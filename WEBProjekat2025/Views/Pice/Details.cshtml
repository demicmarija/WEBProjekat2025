@model Pice

@{
    ViewData["Title"] = "Detalji o piću";
}

<div class="container mt-5">
    <div class="card product-details shadow-lg border-0 rounded-4">
        <div class="card-header text-center text-white bg-info rounded-top-4">
            <h3 class="fw-bold mb-0">@Model.Ime</h3>
        </div>

        <div class="card-body text-center">
            <img src="@Model.SlikaURL" alt="@Model.Ime" class="product-details-img mb-3" />

            <p class="lead text-muted">@Model.Opis</p>

            <div class="text-start mx-auto" style="max-width: 500px;">
                <p>
                    <b>Diskont:</b>
                    <a asp-controller="Diskonti" asp-action="Details" asp-route-id="@Model.DiskontId" class="link-info">
                        @Model.Diskont.Naziv
                    </a>
                </p>
                <p><b>Kategorija:</b> @Model.KategorijaPica</p>
                <p><b>Proizvedeno:</b> @Model.Proizvedeno.ToString("dd MMM yyyy")</p>
                <p><b>Cena:</b> <span class="text-success fw-bold">@Model.Cena.ToString("N0") RSD</span></p>
            </div>

            <hr class="my-4" />

            <h5 class="fw-bold mb-3">Arome</h5>
            <div class="row justify-content-center">
                @foreach (var aroma in Model.Arome_Pice)
                {
                    <div class="col-md-3 col-sm-4 col-6 mb-4">
                        <div class="aroma-card p-2 shadow-sm rounded-4">
                            <img src="@aroma.Aroma.SlikaURL"
                                 alt="@aroma.Aroma.Ime"
                                 class="img-fluid rounded-circle mb-2 aroma-img" />
                            <p class="fw-semibold">@aroma.Aroma.Ime</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="card-footer bg-light text-center border-0 pb-3">
            <a class="btn btn-outline-primary me-2" asp-action="Index">
                <i class="bi bi-arrow-left"></i> Nazad na listu
            </a>
            <a class="btn btn-success text-white"
               asp-controller="Orders"
               asp-action="AddItemToShoppingCart"
               asp-route-id="@Model.Id">
                <i class="bi bi-cart-plus"></i> Dodaj u korpu (@Model.Cena.ToString("N0") RSD)
            </a>
        </div>
    </div>
</div>

