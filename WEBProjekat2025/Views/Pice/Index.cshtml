@model IEnumerable<Pice>

@{
    ViewData["Title"] = "List of Pica";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                            <span>@item.Ime</span>
                            <a class="text-white" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.SlikaURL" width="100%" alt="@item.Ime">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Opis</p>
                            <p class="card-text"><b>Diskont: </b>@item.Diskont.Naziv</p>
                            <p class="card-text"><b>Kategorija: </b>@item.KategorijaPica</p>
                            <p class="card-text"><b>Proizvedeno: </b>@item.Proizvedeno.ToString("dd MMM yy")</p>
                            

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Prikazi detalje
                                </a>
                                <a class="btn btn-success text-white"
                                   asp-controller="Orders"
                                   asp-action="AdditemToShoppingCart"
                                   asp-route-id="@item.Id">
                                    <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Cena.ToString("c"))
                                </a>


                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@await Html.PartialAsync("_Createitem", "Pice")
