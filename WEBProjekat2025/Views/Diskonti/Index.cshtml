@model IEnumerable<Diskont>

@{
    ViewData["Title"] = "Lista diskonta";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 fw-bold text-dark">Naši diskonti</h2>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card diskont-card shadow-lg border-0 rounded-4 h-100 text-center">
                    <div class="card-header bg-info text-white fw-bold rounded-top-4">
                        @item.Naziv
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a class="text-white ms-2" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                            <a class="text-white ms-2" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                        }
                    </div>

                    <img src="@item.LogoURL" alt="@item.Naziv" class="diskont-logo p-3" />

                    <div class="card-body">
                        <p><b>Adresa:</b> @item.Adresa</p>
                    </div>

                    <div class="card-footer bg-light border-0 pb-3">
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-eye"></i> Detalji
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @await Html.PartialAsync("_CreateItem", "Diskonti")
</div>

@await Html.PartialAsync("_CreateItem", "Diskonti")
