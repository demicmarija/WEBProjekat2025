@model Diskont

@{
    ViewData["Title"] = "Detalji";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Detalji o @Model.Naziv</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                
                   
                    <div class=" form-group text-center">
                    <img class="border-info rounded-circle" style="max-width : 150px" id="LogoPreview" />
                    </div>
                    <div class=" form-group">
                        <Label asp-for="LogoURL" class=" control-label"></Label>
                    <input asp-for="LogoURL" class=" form-control" readonly />
                    <span asp-validation-for="LogoURL" class="text-danger"></span>

                    </div>
                    <div class=" form-group">
                        <Label asp-for="Naziv" class=" control-label"></Label>
                    <input asp-for="Naziv" class=" form-control" readonly />
                    <span asp-validation-for="Naziv" class="text-danger"></span>

                    </div>
                    <div class=" form-group">
                        <Label asp-for="Adresa" class=" control-label"></Label>
                    <input asp-for="Adresa" class=" form-control" readonly />
                    <span asp-validation-for="Adresa" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                      @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class=" btn btn-outline-success float-right" asp-action="Edit" asp-route-id ="@Model.Id">Izmeni</a>
                    }
                    <a class=" btn btn-outline-secondary " asp-action="Index">Prikazi sve</a>
                    </div>
                

            </div>
        </div>
    </div>
</div>




@section Scripts {

    <script>

        $(document).ready(function(){
        var output = document.getElementById('LogoPreview');
        output.src = $("#LogoURL").val();
        })

    </script>
}
