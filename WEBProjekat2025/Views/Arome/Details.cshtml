@model Aroma

@{
    ViewData["Title"] = "Detalji";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Detalji o @Model.Ime</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                
                   
                    <div class=" form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="SlikaPreview" />
                    </div>
                    <div class=" form-group">
                        <Label asp-for="SlikaURL" class=" control-label"></Label>
                    <input asp-for="SlikaURL" class=" form-control" readonly />
                    <span asp-validation-for="SlikaURL" class="text-danger"></span>

                    </div>
                    <div class=" form-group">
                        <Label asp-for="Ime" class=" control-label"></Label>
                    <input asp-for="Ime" class=" form-control" readonly />
                    <span asp-validation-for="Ime" class="text-danger"></span>

                    </div>
                    <div class=" form-group">
                        <Label asp-for="Opis" class=" control-label"></Label>
                    <input asp-for="Opis" class=" form-control" readonly />
                    <span asp-validation-for="Opis" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                      
                    <a class=" btn btn-outline-success float-right" asp-action="Edit" asp-route-id ="@Model.Id">Izmeni</a>
                        <a class=" btn btn-outline-secondary " asp-action="Index">Prikazi sve</a>
                    </div>
                

            </div>
        </div>
    </div>
</div>




@section Scripts {

    <script>

        $(document).ready(function(){
        var output = document.getElementById('SlikaPreview');
        output.src = $("#SlikaURL").val();
        })

    </script>
}
