@model List<Order>

@{
    ViewData["Title"] = "Sve porudžbine";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold text-dark mb-4">📦 Sve porudžbine</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Trenutno nema porudžbina.
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            @foreach (var order in Model)
            {
                <div class="col-md-8 mb-4">
                    <div class="card shadow-sm border-0 rounded-4 order-card">
                        <div class="card-header bg-info text-white rounded-top-4 d-flex justify-content-between align-items-center">
                            <span class="fw-bold">Porudžbina #@order.Id</span>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <span class="small fst-italic">Kupac: @order.User.FullName</span>
                            }
                        </div>

                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                @foreach (var item in order.OrderItems)
                                {
                                    <li class="mb-2">
                                        <div class="order-item d-flex align-items-center justify-content-between p-2 rounded">
                                            <div>
                                                <img src="@item.Pice.SlikaURL" alt="@item.Pice.Ime" class="order-item-img me-2" />
                                                <strong>@item.Pice.Ime</strong>
                                                <span class="text-muted small ms-2">@item.Cena.ToString("n2") RSD</span>
                                            </div>
                                            <span class="badge bg-success fs-6">@item.Kolicina x</span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>

                        <div class="card-footer bg-light border-0 text-end fw-bold">
                            Ukupno:
                            <span class="text-info">
                                @order.OrderItems.Select(p => p.Pice.Cena * p.Kolicina).Sum().ToString("n2") RSD
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>